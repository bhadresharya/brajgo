---
const others = [
	{ name: 'Kullu Manali', subtitle: 'Himachal Pradesh', tag: 'Adventure' },
];
---

<section class="border-t border-braj-sand bg-white py-12 sm:py-16">
	<div class="mx-auto max-w-6xl px-4 sm:px-6">
		<h2 class="text-center font-serif text-xl font-semibold text-braj-blue sm:text-2xl">
			Other destinations
		</h2>
		<div class="mt-8 grid gap-6 sm:grid-cols-2">
			{others.map((o) => (
				<div class="overflow-hidden rounded-xl border border-braj-sand bg-braj-cream/30 p-6">
					<div class="aspect-video rounded-lg bg-braj-green/10 flex items-center justify-center">
						<span class="text-braj-green font-medium">{o.tag}</span>
					</div>
					<h3 class="mt-3 font-semibold text-braj-green">{o.name}</h3>
					<p class="text-sm text-braj-blue/70">{o.subtitle}</p>
					<a href="tel:9228597072" class="mt-2 inline-block text-sm font-semibold text-braj-green hover:underline">Enquire</a>
				</div>
			))}
		</div>
	</div>
</section>
