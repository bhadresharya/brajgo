---
// Tempo Traveller, Bus & Cab – like Braj Bhoomi
const services = [
	{
		title: 'Tempo Traveller Hire',
		description: 'Book spacious Tempo Travellers for group travel. Comfortable seating, AC, and a smooth ride for pilgrims and families.',
		cta: 'View details',
	},
	{
		title: 'Bus Hire Services',
		description: 'Plan large group tours with our reliable bus services. Luxury buses with reclining seats and air conditioning.',
		cta: 'Enquiry now',
	},
	{
		title: 'Cab Services',
		description: 'Quick and convenient cab rides in Mathura, Vrindavan & Agra. Temples, stations, and outstation trips.',
		cta: 'Enquiry now',
	},
];
---

<section class="border-t border-braj-sand bg-braj-cream py-14 sm:py-20">
	<div class="mx-auto max-w-6xl px-4 sm:px-6">
		<h2 class="text-center font-serif text-2xl font-semibold text-braj-blue sm:text-3xl">
			Tempo Traveller, Bus & Cab Services
		</h2>
		<p class="mx-auto mt-2 max-w-xl text-center text-braj-blue/80">
			Comfortable, affordable transport for your Mathura–Vrindavan–Agra trip.
		</p>
		<div class="mt-10 grid gap-8 md:grid-cols-3">
			{services.map((s) => (
				<div class="rounded-xl border border-braj-sand bg-white p-6 shadow-sm transition hover:shadow-md">
					<h3 class="font-serif text-lg font-semibold text-braj-blue">{s.title}</h3>
					<p class="mt-3 text-sm text-braj-blue/80">{s.description}</p>
					<a href="tel:9228597072" class="mt-4 inline-block font-semibold text-braj-orange hover:underline">{s.cta} →</a>
				</div>
			))}
		</div>
	</div>
</section>
