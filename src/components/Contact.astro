---
const mobile = ['9228597072', '9413211264'];
const whatsapp = ['9312301972', '9433211264'];
const address = 'Gopal Puram, Mathura, Uttar Pradesh';
// Update with full address when you have it
---

<section id="contact" class="scroll-mt-20 border-t border-braj-sand bg-braj-cream py-14 sm:py-20">
	<div class="mx-auto max-w-6xl px-4 sm:px-6">
		<div class="flex flex-col items-center gap-8 md:flex-row md:items-start md:justify-between">
			<div>
				<a href="/" class="mb-4 inline-flex items-center gap-2">
					<div class="flex h-12 w-12 items-center justify-center rounded-xl bg-braj-green text-white">
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-6 w-6">
							<path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25Z" clip-rule="evenodd" />
						</svg>
					</div>
					<span class="font-serif text-2xl font-semibold text-braj-blue">BRAJ GO</span>
				</a>
				<h2 class="font-serif text-2xl font-semibold text-braj-blue">Contact us</h2>
				<dl class="mt-4 space-y-3 text-braj-blue/90">
					<div>
						<dt class="text-sm font-medium text-braj-blue/70">Address</dt>
						<dd>{address}</dd>
					</div>
					<div>
						<dt class="text-sm font-medium text-braj-blue/70">Mobile</dt>
						<dd>
							{mobile.map((m) => (
								<a href={`tel:${m}`} class="block hover:text-braj-orange">{m}</a>
							))}
						</dd>
					</div>
					<div>
						<dt class="text-sm font-medium text-braj-blue/70">WhatsApp</dt>
						<dd>
							{whatsapp.map((w) => (
								<a href={`https://wa.me/91${w}`} target="_blank" rel="noopener noreferrer" class="block hover:text-braj-green">{w}</a>
							))}
						</dd>
					</div>
				</dl>
				<p class="mt-4 text-sm font-medium text-braj-blue/80">Braj Go Tour and Travels</p>
			</div>
			<a
				href="tel:9228597072"
				class="flex w-full max-w-sm items-center justify-center gap-2 rounded-xl bg-braj-red px-8 py-4 font-semibold text-white shadow-lg transition hover:bg-braj-red/90 md:max-w-xs"
			>
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-5 w-5">
					<path fill-rule="evenodd" d="M1.5 4.5a3 3 0 0 1 3-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 0 1-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 0 0 6.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 0 1 1.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 0 1-3 3h-2.25C2.95 22.5 0 19.55 0 16.125V6.375a3 3 0 0 1 3-3H5.25Z" clip-rule="evenodd" />
				</svg>
				Book now
			</a>
		</div>
	</div>
</section>
