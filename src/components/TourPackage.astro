---
import BaseLayout from './BaseLayout.astro';
import PageTitle from './PageTitle.astro';

interface Props {
	title: string;
	description: string;
	subtitle: string;
	image: string;
	duration: string;
	places: string[];
	itinerary: { time: string; activity: string }[];
	prices: { sedan: string; ertiga: string; innova: string; traveller: string };
	inclusions: string[];
	exclusions: string[];
	currentPath: string;
}

const { title, description, subtitle, image, duration, places, itinerary, prices, inclusions, exclusions, currentPath } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const imagePath = `${base}${image}`;
---

<BaseLayout title={title} description={description} currentPath={currentPath}>
	<PageTitle title={title} subtitle={subtitle} />

	<!-- Tour Overview -->
	<section class="py-12 sm:py-16" style="background-color: white;">
		<div class="mx-auto max-w-6xl px-4">
			<div class="grid gap-10 lg:grid-cols-2">
				<div>
					<img src={imagePath} alt={title} class="w-full rounded-2xl shadow-xl" />
				</div>
				<div>
					<div class="inline-block rounded-full px-4 py-1 text-sm font-semibold text-white" style="background-color: var(--primary);">
						{duration}
					</div>
					<h2 class="mt-4 text-2xl font-bold sm:text-3xl" style="color: var(--primary);">
						Tour Highlights
					</h2>
					<p class="mt-4 leading-relaxed" style="color: var(--text-gray);">
						Experience the divine beauty of the sacred land with our expertly curated tour package. Visit the most revered temples and historical sites with comfortable transportation.
					</p>
					
					<h3 class="mt-6 text-lg font-bold" style="color: var(--text-dark);">Places Covered:</h3>
					<ul class="mt-3 grid grid-cols-2 gap-2">
						{places.map((place) => (
							<li class="flex items-center gap-2 text-sm" style="color: var(--text-gray);">
								<svg class="h-4 w-4 shrink-0" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								{place}
							</li>
						))}
					</ul>

					<div class="mt-8 flex flex-col gap-3 sm:flex-row">
						<a 
							href="tel:+918923897072" 
							class="inline-flex items-center justify-center gap-2 rounded-full px-6 py-3 font-bold text-white transition hover:opacity-90"
							style="background-color: var(--primary);"
						>
							<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
							</svg>
							Book Now: +91 89238 97072
						</a>
						<a 
							href="https://wa.me/918439191284" 
							target="_blank"
							rel="noopener noreferrer"
							class="inline-flex items-center justify-center gap-2 rounded-full px-6 py-3 font-bold text-white transition hover:opacity-90"
							style="background-color: #25D366;"
						>
							<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
								<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
							</svg>
							WhatsApp
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Pricing -->
	<section class="py-12 sm:py-16" style="background-color: var(--bg-light);">
		<div class="mx-auto max-w-6xl px-4">
			<h2 class="text-center text-2xl font-bold sm:text-3xl" style="color: var(--primary);">
				Tour Package Pricing
			</h2>
			<p class="mx-auto mt-4 max-w-2xl text-center" style="color: var(--text-gray);">
				Choose the vehicle that best suits your group size and budget
			</p>

			<div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
				<div class="overflow-hidden rounded-xl bg-white shadow-lg" style="border: 2px solid var(--primary);">
					<div class="p-6 text-center">
						<h3 class="text-lg font-bold" style="color: var(--text-dark);">Sedan</h3>
						<p class="text-sm" style="color: var(--text-gray);">4 Seater</p>
						<p class="mt-4 text-3xl font-bold" style="color: var(--primary);">₹{prices.sedan}</p>
					</div>
					<a 
						href="tel:+918923897072" 
						class="block py-3 text-center font-semibold text-white transition hover:opacity-90"
						style="background-color: var(--primary);"
					>
						Book Now
					</a>
				</div>

				<div class="overflow-hidden rounded-xl bg-white shadow-lg" style="border: 2px solid var(--primary);">
					<div class="p-6 text-center">
						<h3 class="text-lg font-bold" style="color: var(--text-dark);">Ertiga</h3>
						<p class="text-sm" style="color: var(--text-gray);">6 Seater</p>
						<p class="mt-4 text-3xl font-bold" style="color: var(--primary);">₹{prices.ertiga}</p>
					</div>
					<a 
						href="tel:+918923897072" 
						class="block py-3 text-center font-semibold text-white transition hover:opacity-90"
						style="background-color: var(--primary);"
					>
						Book Now
					</a>
				</div>

				<div class="overflow-hidden rounded-xl bg-white shadow-lg" style="border: 2px solid var(--primary);">
					<div class="p-6 text-center">
						<h3 class="text-lg font-bold" style="color: var(--text-dark);">Innova Crysta</h3>
						<p class="text-sm" style="color: var(--text-gray);">7 Seater</p>
						<p class="mt-4 text-3xl font-bold" style="color: var(--primary);">₹{prices.innova}</p>
					</div>
					<a 
						href="tel:+918923897072" 
						class="block py-3 text-center font-semibold text-white transition hover:opacity-90"
						style="background-color: var(--primary);"
					>
						Book Now
					</a>
				</div>

				<div class="overflow-hidden rounded-xl bg-white shadow-lg" style="border: 2px solid var(--primary);">
					<div class="p-6 text-center">
						<h3 class="text-lg font-bold" style="color: var(--text-dark);">Tempo Traveller</h3>
						<p class="text-sm" style="color: var(--text-gray);">12-17 Seater</p>
						<p class="mt-4 text-3xl font-bold" style="color: var(--primary);">₹{prices.traveller}</p>
					</div>
					<a 
						href="tel:+918923897072" 
						class="block py-3 text-center font-semibold text-white transition hover:opacity-90"
						style="background-color: var(--primary);"
					>
						Book Now
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Itinerary -->
	<section class="py-12 sm:py-16" style="background-color: white;">
		<div class="mx-auto max-w-6xl px-4">
			<h2 class="text-center text-2xl font-bold sm:text-3xl" style="color: var(--primary);">
				Tour Itinerary
			</h2>
			<p class="mx-auto mt-4 max-w-2xl text-center" style="color: var(--text-gray);">
				A detailed schedule of your tour
			</p>

			<div class="mt-10 mx-auto max-w-3xl">
				{itinerary.map((item, index) => (
					<div class="flex gap-4 pb-8 last:pb-0">
						<div class="relative flex flex-col items-center">
							<div class="flex h-10 w-10 items-center justify-center rounded-full text-white font-bold" style="background-color: var(--primary);">
								{index + 1}
							</div>
							{index < itinerary.length - 1 && (
								<div class="absolute top-10 h-full w-0.5" style="background-color: var(--primary-light);"></div>
							)}
						</div>
						<div class="flex-1 pb-4">
							<p class="text-sm font-semibold" style="color: var(--primary);">{item.time}</p>
							<p class="mt-1" style="color: var(--text-gray);">{item.activity}</p>
						</div>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Inclusions & Exclusions -->
	<section class="py-12 sm:py-16" style="background-color: var(--bg-light);">
		<div class="mx-auto max-w-6xl px-4">
			<div class="grid gap-8 lg:grid-cols-2">
				<!-- Inclusions -->
				<div class="rounded-2xl bg-white p-6 shadow-lg">
					<h3 class="text-xl font-bold" style="color: var(--primary);">
						<span class="mr-2">✓</span> Inclusions
					</h3>
					<ul class="mt-4 space-y-3">
						{inclusions.map((item) => (
							<li class="flex items-start gap-3" style="color: var(--text-gray);">
								<svg class="h-5 w-5 shrink-0 mt-0.5" style="color: #22c55e;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								{item}
							</li>
						))}
					</ul>
				</div>

				<!-- Exclusions -->
				<div class="rounded-2xl bg-white p-6 shadow-lg">
					<h3 class="text-xl font-bold" style="color: var(--accent);">
						<span class="mr-2">✗</span> Exclusions
					</h3>
					<ul class="mt-4 space-y-3">
						{exclusions.map((item) => (
							<li class="flex items-start gap-3" style="color: var(--text-gray);">
								<svg class="h-5 w-5 shrink-0 mt-0.5" style="color: #ef4444;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
								</svg>
								{item}
							</li>
						))}
					</ul>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-12 sm:py-16" style="background-color: var(--primary);">
		<div class="mx-auto max-w-4xl px-4 text-center text-white">
			<h2 class="text-2xl font-bold sm:text-3xl">Ready to Book This Tour?</h2>
			<p class="mx-auto mt-4 max-w-xl text-white/90">
				Contact us now to book your tour package. We're available 24/7 to assist you with your travel plans.
			</p>
			<div class="mt-8 flex flex-col items-center justify-center gap-4 sm:flex-row">
				<a 
					href="tel:+918923897072" 
					class="inline-flex items-center gap-2 rounded-full px-8 py-4 text-lg font-bold transition hover:opacity-90"
					style="background-color: var(--accent);"
				>
					<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
					</svg>
					Call: +91 89238 97072
				</a>
				<a 
					href="https://wa.me/918439191284" 
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 rounded-full border-2 border-white/30 bg-white/10 px-8 py-4 text-lg font-bold backdrop-blur-sm transition hover:bg-white/20"
				>
					<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
						<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
					</svg>
					WhatsApp Us
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
