---
const destinations = [
	{ name: 'Mathura', tag: 'Birthplace of Krishna', price: 'From ₹4,999', imageId: 'mathura' },
	{ name: 'Vrindavan', tag: 'Land of temples', price: 'From ₹5,999', imageId: 'vrindavan' },
	{ name: 'Agra', tag: 'Taj Mahal & more', price: 'From ₹6,499', imageId: 'agra' },
	{ name: 'Braj Circuit', tag: 'Multi-day pilgrimage', price: 'From ₹12,999', imageId: 'braj' },
];
---

<section id="destinations" class="scroll-mt-24 bg-deep-green px-4 py-20 sm:px-8">
	<div class="mx-auto max-w-6xl">
		<div class="text-center">
			<p class="text-accent-teal text-sm font-medium uppercase tracking-widest">Popular destinations</p>
			<h2 class="mt-2 text-3xl font-bold text-white sm:text-4xl">Where we take you</h2>
		</div>
		<div class="mt-14 grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
			{destinations.map((d) => (
				<a href="tel:9228597072" class="group overflow-hidden rounded-2xl bg-white/5 shadow-lg backdrop-blur-sm transition hover:bg-white/10">
					<div class="aspect-[4/3] overflow-hidden">
						<img src={`https://picsum.photos/seed/${d.imageId}/400/300`} alt={d.name} class="h-full w-full object-cover transition group-hover:scale-105" width="400" height="300" />
					</div>
					<div class="p-5">
						<p class="text-sm text-mint/90">{d.tag}</p>
						<h3 class="mt-1 text-xl font-semibold text-white">{d.name}</h3>
						<p class="mt-2 font-medium text-accent-teal">{d.price}</p>
					</div>
				</a>
			))}
		</div>
		<div class="mt-12 text-center">
			<a href="tel:9228597072" class="inline-block rounded-full border-2 border-accent-teal px-8 py-3 font-semibold text-accent-teal transition hover:bg-accent-teal hover:text-white">
				View all packages
			</a>
		</div>
	</div>
</section>
