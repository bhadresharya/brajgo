---
interface Props {
	currentPath?: string;
}

const { currentPath = '/' } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const tourPackagesMathura = [
	{ title: 'Mathura Vrindavan 1 Day Tour', href: `${base}/tours/mathura-vrindavan-1-day` },
	{ title: 'Mathura Vrindavan 2 Day Tour', href: `${base}/tours/mathura-vrindavan-2-day` },
	{ title: 'Mathura Vrindavan 3 Day Tour', href: `${base}/tours/mathura-vrindavan-3-day` },
	{ title: 'Mathura Vrindavan Agra 3 Day Tour', href: `${base}/tours/mathura-vrindavan-agra-3-day` },
	{ title: 'Agra Tour', href: `${base}/tours/agra-tour` },
	{ title: 'Agra Fatehpur Sikri Tour', href: `${base}/tours/agra-fatehpur-sikri` },
];

const tourPackagesDelhi = [
	{ title: 'Mathura Vrindavan 1 Day Tour from Delhi', href: `${base}/tours/delhi-mathura-vrindavan-1-day` },
	{ title: 'Mathura Vrindavan 2 Day Tour from Delhi', href: `${base}/tours/delhi-mathura-vrindavan-2-day` },
	{ title: 'Mathura Vrindavan 3 Day Tour from Delhi', href: `${base}/tours/delhi-mathura-vrindavan-3-day` },
	{ title: 'Agra Mathura Vrindavan 1 Day Tour from Delhi', href: `${base}/tours/delhi-agra-mathura-1-day` },
	{ title: 'Agra Mathura Vrindavan 2 Day Tour from Delhi', href: `${base}/tours/delhi-agra-mathura-2-day` },
	{ title: 'Agra Tour from Delhi', href: `${base}/tours/delhi-agra-tour` },
];

const taxiRoutes = [
	{ title: 'Vrindavan To Delhi Taxi', href: `${base}/taxi/vrindavan-to-delhi` },
	{ title: 'Mathura To Delhi Taxi', href: `${base}/taxi/mathura-to-delhi` },
	{ title: 'Delhi To Vrindavan Taxi', href: `${base}/taxi/delhi-to-vrindavan` },
	{ title: 'Delhi To Mathura Taxi', href: `${base}/taxi/delhi-to-mathura` },
	{ title: 'Mathura to Agra Taxi', href: `${base}/taxi/mathura-to-agra` },
	{ title: 'Vrindavan to Agra Taxi', href: `${base}/taxi/vrindavan-to-agra` },
	{ title: 'Agra To Vrindavan Taxi', href: `${base}/taxi/agra-to-vrindavan` },
	{ title: 'Agra To Mathura Taxi', href: `${base}/taxi/agra-to-mathura` },
];

const isActive = (path: string) => currentPath === path;
const isInSection = (paths: string[]) => paths.some(p => currentPath.startsWith(p));
---

<header class="sticky top-0 z-50 shadow-md" style="background-color: var(--primary);">
	<!-- Secondary navbar: contact + WhatsApp -->
	<div class="border-b border-white/15 px-4 py-2" style="background-color: var(--primary-dark);">
		<div class="mx-auto flex max-w-6xl flex-wrap items-center justify-between gap-2 text-sm text-white/95">
			<a href="tel:+918923897072" class="inline-flex items-center gap-2 transition hover:text-white" aria-label="Call us">
				<svg class="h-4 w-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
				</svg>
				<span class="hidden sm:inline">Call:</span>
				<span>+91 89238 97072</span>
			</a>
			<a href="https://wa.me/918439191284" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 transition hover:text-white" aria-label="WhatsApp us">
				<svg class="h-4 w-4 shrink-0" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
					<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
				</svg>
				<span class="hidden sm:inline">WhatsApp:</span>
				<span>+91 84391 91284</span>
			</a>
		</div>
	</div>
	<!-- Main nav -->
	<div class="mx-auto max-w-6xl px-4 py-3">
		<div class="flex items-center justify-between">
			<!-- Logo -->
			<a href={`${base}/`} class="flex items-center gap-2 sm:gap-3">
				<img src={`${base}/images/logo.png`} alt="Braj Go" class="h-12 w-auto sm:h-14" />
				<div>
					<span class="text-lg font-bold text-white sm:text-xl">Braj Go</span>
					<span class="block text-[10px] text-white/80 sm:text-xs">Tours & Travels</span>
				</div>
			</a>

			<!-- Desktop Navigation -->
			<nav class="hidden items-center gap-4 lg:flex">
				<a href={`${base}/`} class={`text-sm font-medium transition ${isActive('/') ? 'text-white' : 'text-white/90 hover:text-white'}`}>Home</a>
				<a href={`${base}/about`} class={`text-sm font-medium transition ${isActive('/about') ? 'text-white' : 'text-white/90 hover:text-white'}`}>About us</a>
				
				<!-- Tour Package from Mathura Dropdown -->
				<div class="group relative">
					<button class={`text-sm font-medium transition ${isInSection(['/tours/mathura', '/tours/agra-tour', '/tours/agra-fatehpur']) ? 'text-white' : 'text-white/90 hover:text-white'}`}>
						Tour Package from Mathura ▾
					</button>
					<div class="absolute left-0 top-full hidden w-64 rounded-lg bg-white py-2 shadow-lg group-hover:block">
						{tourPackagesMathura.map((item) => (
							<a href={item.href} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">{item.title}</a>
						))}
					</div>
				</div>
				
				<!-- Tour Package from Delhi Dropdown -->
				<div class="group relative">
					<button class={`text-sm font-medium transition ${isInSection(['/tours/delhi']) ? 'text-white' : 'text-white/90 hover:text-white'}`}>
						Tour Package from Delhi ▾
					</button>
					<div class="absolute left-0 top-full hidden w-72 rounded-lg bg-white py-2 shadow-lg group-hover:block">
						{tourPackagesDelhi.map((item) => (
							<a href={item.href} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">{item.title}</a>
						))}
					</div>
				</div>
				
				<!-- Taxi Service Dropdown -->
				<div class="group relative">
					<button class={`text-sm font-medium transition ${isInSection(['/taxi']) ? 'text-white' : 'text-white/90 hover:text-white'}`}>
						Taxi Service ▾
					</button>
					<div class="absolute left-0 top-full hidden w-56 rounded-lg bg-white py-2 shadow-lg group-hover:block">
						{taxiRoutes.map((item) => (
							<a href={item.href} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">{item.title}</a>
						))}
					</div>
				</div>
				
				<a href={`${base}/contact`} class={`text-sm font-medium transition ${isActive('/contact') ? 'text-white' : 'text-white/90 hover:text-white'}`}>Contact</a>
			</nav>

			<!-- Mobile Menu Button + CTA -->
			<div class="flex items-center gap-3">
				<!-- CTA (hidden on mobile) -->
				<a 
					href="tel:+918923897072" 
					class="hidden rounded-full px-5 py-2 text-sm font-bold text-white transition sm:block"
					style="background-color: var(--accent);"
				>
					Call Now
				</a>

				<!-- Mobile Menu Button -->
				<button 
					id="mobile-menu-btn"
					class="flex h-10 w-10 items-center justify-center rounded-lg text-white lg:hidden"
					aria-label="Toggle menu"
				>
					<svg id="menu-icon" class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
					</svg>
					<svg id="close-icon" class="hidden h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
					</svg>
				</button>
			</div>
		</div>
	</div>

	<!-- Mobile Navigation -->
	<nav id="mobile-menu" class="hidden border-t border-white/20 lg:hidden" style="background-color: var(--primary);">
		<div class="mx-auto max-w-6xl px-4 py-4">
			<div class="flex flex-col gap-2">
				<a href={`${base}/`} class={`rounded-lg px-4 py-2 text-sm font-medium ${isActive('/') ? 'bg-white/20 text-white' : 'text-white/90 hover:bg-white/10'}`}>Home</a>
				<a href={`${base}/about`} class={`rounded-lg px-4 py-2 text-sm font-medium ${isActive('/about') ? 'bg-white/20 text-white' : 'text-white/90 hover:bg-white/10'}`}>About us</a>
				
				<!-- Tour Packages from Mathura -->
				<div class="mobile-dropdown">
					<button class="flex w-full items-center justify-between rounded-lg px-4 py-2 text-sm font-medium text-white/90 hover:bg-white/10">
						Tour Package from Mathura
						<svg class="h-4 w-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
						</svg>
					</button>
					<div class="mobile-dropdown-content mt-1 hidden space-y-1 pl-4">
						{tourPackagesMathura.map((item) => (
							<a href={item.href} class="block rounded-lg px-4 py-2 text-sm text-white/80 hover:bg-white/10">{item.title}</a>
						))}
					</div>
				</div>
				
				<!-- Tour Packages from Delhi -->
				<div class="mobile-dropdown">
					<button class="flex w-full items-center justify-between rounded-lg px-4 py-2 text-sm font-medium text-white/90 hover:bg-white/10">
						Tour Package from Delhi
						<svg class="h-4 w-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
						</svg>
					</button>
					<div class="mobile-dropdown-content mt-1 hidden space-y-1 pl-4">
						{tourPackagesDelhi.map((item) => (
							<a href={item.href} class="block rounded-lg px-4 py-2 text-sm text-white/80 hover:bg-white/10">{item.title}</a>
						))}
					</div>
				</div>
				
				<!-- Taxi Service -->
				<div class="mobile-dropdown">
					<button class="flex w-full items-center justify-between rounded-lg px-4 py-2 text-sm font-medium text-white/90 hover:bg-white/10">
						Taxi Service
						<svg class="h-4 w-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
						</svg>
					</button>
					<div class="mobile-dropdown-content mt-1 hidden space-y-1 pl-4">
						{taxiRoutes.map((item) => (
							<a href={item.href} class="block rounded-lg px-4 py-2 text-sm text-white/80 hover:bg-white/10">{item.title}</a>
						))}
					</div>
				</div>
				
				<a href={`${base}/contact`} class={`rounded-lg px-4 py-2 text-sm font-medium ${isActive('/contact') ? 'bg-white/20 text-white' : 'text-white/90 hover:bg-white/10'}`}>Contact</a>
			</div>
		</div>
	</nav>
</header>

<script>
	// Mobile menu toggle
	const mobileMenuBtn = document.getElementById('mobile-menu-btn');
	const mobileMenu = document.getElementById('mobile-menu');
	const menuIcon = document.getElementById('menu-icon');
	const closeIcon = document.getElementById('close-icon');

	mobileMenuBtn?.addEventListener('click', () => {
		const isOpen = !mobileMenu?.classList.contains('hidden');
		mobileMenu?.classList.toggle('hidden');
		menuIcon?.classList.toggle('hidden');
		closeIcon?.classList.toggle('hidden');
	});

	// Mobile dropdown toggles
	const mobileDropdowns = document.querySelectorAll('.mobile-dropdown');
	mobileDropdowns.forEach((dropdown) => {
		const btn = dropdown.querySelector('button');
		const content = dropdown.querySelector('.mobile-dropdown-content');
		const icon = btn?.querySelector('svg');
		
		btn?.addEventListener('click', () => {
			content?.classList.toggle('hidden');
			icon?.classList.toggle('rotate-180');
		});
	});
</script>
