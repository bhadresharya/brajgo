---
interface Props {
	title: string;
	subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section class="py-12 sm:py-16" style="background-color: var(--primary);">
	<div class="mx-auto max-w-6xl px-4 text-center text-white">
		<h1 class="text-3xl font-bold sm:text-4xl lg:text-5xl">{title}</h1>
		{subtitle && (
			<p class="mx-auto mt-4 max-w-2xl text-lg text-white/90">
				{subtitle}
			</p>
		)}
	</div>
</section>
