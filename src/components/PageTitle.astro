---
interface Props {
	title: string;
	description?: string;
}

const { title, description } = Astro.props;
---

<div class="bg-deep-green px-4 pt-28 pb-16 sm:px-8 sm:pt-32 sm:pb-20">
	<div class="mx-auto max-w-6xl">
		<h1 class="text-3xl font-bold text-white sm:text-4xl">{title}</h1>
		{description && <p class="mt-3 max-w-2xl text-mint/90">{description}</p>}
	</div>
</div>
