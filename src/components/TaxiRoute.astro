---
import BaseLayout from './BaseLayout.astro';
import PageTitle from './PageTitle.astro';

interface Props {
	title: string;
	description: string;
	subtitle: string;
	from: string;
	to: string;
	distance: string;
	duration: string;
	prices: { sedan: string; ertiga: string; innova: string; traveller: string };
	highlights: string[];
	currentPath: string;
}

const { title, description, subtitle, from, to, distance, duration, prices, highlights, currentPath } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<BaseLayout title={title} description={description} currentPath={currentPath}>
	<PageTitle title={title} subtitle={subtitle} />

	<!-- Route Overview -->
	<section class="py-12 sm:py-16" style="background-color: white;">
		<div class="mx-auto max-w-6xl px-4">
			<div class="grid gap-10 lg:grid-cols-2">
				<!-- Route Info -->
				<div>
					<h2 class="text-2xl font-bold sm:text-3xl" style="color: var(--primary);">
						{from} to {to} Taxi Service
					</h2>
					<p class="mt-4 leading-relaxed" style="color: var(--text-gray);">
						Looking for a reliable taxi service from {from} to {to}? Braj Go Tours and Travels offers comfortable and affordable taxi services for this route. Our experienced drivers ensure a safe and pleasant journey with well-maintained vehicles.
					</p>
					
					<!-- Route Stats -->
					<div class="mt-8 grid grid-cols-2 gap-4">
						<div class="rounded-xl p-4" style="background-color: var(--bg-light);">
							<div class="flex items-center gap-3">
								<div class="flex h-10 w-10 items-center justify-center rounded-full" style="background-color: var(--primary);">
									<svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
									</svg>
								</div>
								<div>
									<p class="text-sm" style="color: var(--text-gray);">Distance</p>
									<p class="font-bold" style="color: var(--text-dark);">{distance}</p>
								</div>
							</div>
						</div>
						<div class="rounded-xl p-4" style="background-color: var(--bg-light);">
							<div class="flex items-center gap-3">
								<div class="flex h-10 w-10 items-center justify-center rounded-full" style="background-color: var(--primary);">
									<svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
									</svg>
								</div>
								<div>
									<p class="text-sm" style="color: var(--text-gray);">Duration</p>
									<p class="font-bold" style="color: var(--text-dark);">{duration}</p>
								</div>
							</div>
						</div>
					</div>

					<!-- Book Now Buttons -->
					<div class="mt-8 flex flex-col gap-3 sm:flex-row">
						<a 
							href="tel:+918923897072" 
							class="inline-flex items-center justify-center gap-2 rounded-full px-6 py-3 font-bold text-white transition hover:opacity-90"
							style="background-color: var(--primary);"
						>
							<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
							</svg>
							Book Now: +91 89238 97072
						</a>
						<a 
							href="https://wa.me/918923897072" 
							target="_blank"
							rel="noopener noreferrer"
							class="inline-flex items-center justify-center gap-2 rounded-full px-6 py-3 font-bold text-white transition hover:opacity-90"
							style="background-color: #25D366;"
						>
							<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
								<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
							</svg>
							WhatsApp
						</a>
					</div>
				</div>

				<!-- Route Visual -->
				<div class="rounded-2xl p-6" style="background-color: var(--bg-light);">
					<div class="flex flex-col items-center">
						<div class="text-center">
							<div class="flex h-16 w-16 mx-auto items-center justify-center rounded-full" style="background-color: var(--primary);">
								<svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
								</svg>
							</div>
							<p class="mt-2 font-bold text-lg" style="color: var(--text-dark);">{from}</p>
						</div>
						
						<div class="my-4 flex flex-col items-center">
							<div class="h-12 w-0.5" style="background-color: var(--primary);"></div>
							<div class="flex h-8 w-8 items-center justify-center rounded-full" style="background-color: var(--primary-light);">
								<svg class="h-4 w-4" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
								</svg>
							</div>
							<p class="my-2 text-sm font-medium" style="color: var(--text-gray);">{distance} • {duration}</p>
							<div class="h-12 w-0.5" style="background-color: var(--primary);"></div>
						</div>
						
						<div class="text-center">
							<div class="flex h-16 w-16 mx-auto items-center justify-center rounded-full" style="background-color: var(--accent);">
								<svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
								</svg>
							</div>
							<p class="mt-2 font-bold text-lg" style="color: var(--text-dark);">{to}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Pricing -->
	<section class="py-12 sm:py-16" style="background-color: var(--bg-light);">
		<div class="mx-auto max-w-6xl px-4">
			<h2 class="text-center text-2xl font-bold sm:text-3xl" style="color: var(--primary);">
				Taxi Fare from {from} to {to}
			</h2>
			<p class="mx-auto mt-4 max-w-2xl text-center" style="color: var(--text-gray);">
				Choose the vehicle that suits your needs. All prices are inclusive of toll and parking.
			</p>

			<div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
				<div class="overflow-hidden rounded-xl bg-white shadow-lg transition hover:shadow-xl" style="border: 2px solid var(--primary);">
					<div class="p-6 text-center">
						<img src={`${base}/images/sedan.png`} alt="Sedan" class="mx-auto h-24 w-auto object-contain" />
						<h3 class="mt-4 text-lg font-bold" style="color: var(--text-dark);">Sedan</h3>
						<p class="text-sm" style="color: var(--text-gray);">4 Seater • AC</p>
						<p class="mt-4 text-3xl font-bold" style="color: var(--primary);">₹{prices.sedan}</p>
					</div>
					<a 
						href="tel:+918923897072" 
						class="block py-3 text-center font-semibold text-white transition hover:opacity-90"
						style="background-color: var(--primary);"
					>
						Book Now
					</a>
				</div>

				<div class="overflow-hidden rounded-xl bg-white shadow-lg transition hover:shadow-xl" style="border: 2px solid var(--primary);">
					<div class="p-6 text-center">
						<img src={`${base}/images/ertiga.png`} alt="Ertiga" class="mx-auto h-24 w-auto object-contain" />
						<h3 class="mt-4 text-lg font-bold" style="color: var(--text-dark);">Ertiga</h3>
						<p class="text-sm" style="color: var(--text-gray);">6 Seater • AC</p>
						<p class="mt-4 text-3xl font-bold" style="color: var(--primary);">₹{prices.ertiga}</p>
					</div>
					<a 
						href="tel:+918923897072" 
						class="block py-3 text-center font-semibold text-white transition hover:opacity-90"
						style="background-color: var(--primary);"
					>
						Book Now
					</a>
				</div>

				<div class="overflow-hidden rounded-xl bg-white shadow-lg transition hover:shadow-xl" style="border: 2px solid var(--primary);">
					<div class="p-6 text-center">
						<img src={`${base}/images/innova-crysta.png`} alt="Innova Crysta" class="mx-auto h-24 w-auto object-contain" />
						<h3 class="mt-4 text-lg font-bold" style="color: var(--text-dark);">Innova Crysta</h3>
						<p class="text-sm" style="color: var(--text-gray);">7 Seater • AC</p>
						<p class="mt-4 text-3xl font-bold" style="color: var(--primary);">₹{prices.innova}</p>
					</div>
					<a 
						href="tel:+918923897072" 
						class="block py-3 text-center font-semibold text-white transition hover:opacity-90"
						style="background-color: var(--primary);"
					>
						Book Now
					</a>
				</div>

				<div class="overflow-hidden rounded-xl bg-white shadow-lg transition hover:shadow-xl" style="border: 2px solid var(--primary);">
					<div class="p-6 text-center">
						<img src={`${base}/images/traveller.png`} alt="Tempo Traveller" class="mx-auto h-24 w-auto object-contain" />
						<h3 class="mt-4 text-lg font-bold" style="color: var(--text-dark);">Tempo Traveller</h3>
						<p class="text-sm" style="color: var(--text-gray);">12-17 Seater • AC</p>
						<p class="mt-4 text-3xl font-bold" style="color: var(--primary);">₹{prices.traveller}</p>
					</div>
					<a 
						href="tel:+918923897072" 
						class="block py-3 text-center font-semibold text-white transition hover:opacity-90"
						style="background-color: var(--primary);"
					>
						Book Now
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Why Choose Us -->
	<section class="py-12 sm:py-16" style="background-color: white;">
		<div class="mx-auto max-w-6xl px-4">
			<h2 class="text-center text-2xl font-bold sm:text-3xl" style="color: var(--primary);">
				Why Book With Us?
			</h2>

			<div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
				<div class="text-center">
					<div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full" style="background-color: var(--primary-light);">
						<svg class="h-7 w-7" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
					<h3 class="mt-4 font-bold" style="color: var(--text-dark);">Best Rates</h3>
					<p class="mt-2 text-sm" style="color: var(--text-gray);">Competitive pricing with no hidden charges</p>
				</div>

				<div class="text-center">
					<div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full" style="background-color: var(--primary-light);">
						<svg class="h-7 w-7" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
						</svg>
					</div>
					<h3 class="mt-4 font-bold" style="color: var(--text-dark);">Safe Journey</h3>
					<p class="mt-2 text-sm" style="color: var(--text-gray);">Experienced drivers and well-maintained cars</p>
				</div>

				<div class="text-center">
					<div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full" style="background-color: var(--primary-light);">
						<svg class="h-7 w-7" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
					<h3 class="mt-4 font-bold" style="color: var(--text-dark);">24/7 Service</h3>
					<p class="mt-2 text-sm" style="color: var(--text-gray);">Available round the clock for your convenience</p>
				</div>

				<div class="text-center">
					<div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full" style="background-color: var(--primary-light);">
						<svg class="h-7 w-7" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
						</svg>
					</div>
					<h3 class="mt-4 font-bold" style="color: var(--text-dark);">Easy Booking</h3>
					<p class="mt-2 text-sm" style="color: var(--text-gray);">Simple phone/WhatsApp booking process</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Highlights -->
	<section class="py-12 sm:py-16" style="background-color: var(--bg-light);">
		<div class="mx-auto max-w-6xl px-4">
			<h2 class="text-center text-2xl font-bold sm:text-3xl" style="color: var(--primary);">
				Route Highlights
			</h2>
			<p class="mx-auto mt-4 max-w-2xl text-center" style="color: var(--text-gray);">
				Key attractions and stops on this route
			</p>

			<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
				{highlights.map((highlight) => (
					<div class="flex items-center gap-3 rounded-lg bg-white p-4 shadow">
						<div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full" style="background-color: var(--primary);">
							<svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
							</svg>
						</div>
						<span class="font-medium" style="color: var(--text-dark);">{highlight}</span>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-12 sm:py-16" style="background-color: var(--primary);">
		<div class="mx-auto max-w-4xl px-4 text-center text-white">
			<h2 class="text-2xl font-bold sm:text-3xl">Ready to Book Your Taxi?</h2>
			<p class="mx-auto mt-4 max-w-xl text-white/90">
				Call us now to book your taxi from {from} to {to}. We're available 24/7 for your convenience.
			</p>
			<div class="mt-8 flex flex-col items-center justify-center gap-4 sm:flex-row">
				<a 
					href="tel:+918923897072" 
					class="inline-flex items-center gap-2 rounded-full px-8 py-4 text-lg font-bold transition hover:opacity-90"
					style="background-color: var(--accent);"
				>
					<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
					</svg>
					Call: +91 89238 97072
				</a>
				<a 
					href="https://wa.me/918923897072" 
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 rounded-full border-2 border-white/30 bg-white/10 px-8 py-4 text-lg font-bold backdrop-blur-sm transition hover:bg-white/20"
				>
					<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
						<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
					</svg>
					WhatsApp Us
				</a>
			</div>
		</div>
	</section>
