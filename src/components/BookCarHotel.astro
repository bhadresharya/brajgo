---
const items = [
	{
		title: 'Book Car',
		description: 'Sedan, Ertiga, Innova, Traveller. Per-day hire for Mathura, Vrindavan & Agra.',
		href: 'tel:9228597072',
		imageId: 'car',
	},
	{
		title: 'Book Tour',
		description: 'Packages from Delhi. Same-day and multi-day temple & heritage tours.',
		href: '#packages',
		imageId: 'tour',
	},
];
---

<section class="mx-auto max-w-6xl px-4 py-14 sm:px-6 sm:py-20">
	<div class="grid gap-8 md:grid-cols-2">
		{items.map((item) => (
			<a href={item.href} class="flex gap-6 rounded-xl border border-border bg-white p-6 shadow-sm transition hover:shadow-md">
				<img src={`https://picsum.photos/seed/${item.imageId}/80/80`} alt="" class="h-20 w-20 shrink-0 rounded-xl object-cover" width="80" height="80" />
				<div>
					<h3 class="text-lg font-semibold text-primary">{item.title}</h3>
					<p class="mt-2 text-sm text-muted">{item.description}</p>
					<span class="mt-3 inline-block text-sm font-medium text-accent-blue underline underline-offset-2">Explore now</span>
				</div>
			</a>
		))}
	</div>
</section>
