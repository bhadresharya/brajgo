---
// Package cards inspired by Braj Bhoomi – name, destination, duration, price, Enquiry Now
const packages = [
	{ name: 'Mathura Vrindavan Local Sightseeing', destination: 'Delhi – Mathura', duration: 'Same day', price: 'From ₹4,999' },
	{ name: 'Vrindavan Local Sightseeing', destination: 'Vrindavan', duration: 'Same day', price: 'From ₹5,999' },
	{ name: '1 Day Delhi to Mathura Tour', destination: 'Mathura', duration: 'Same day', price: 'From ₹8,499' },
	{ name: 'Same Day Agra Mathura Vrindavan', destination: 'Agra – Mathura', duration: 'Same day', price: 'From ₹7,499' },
	{ name: '2 Days Mathura Vrindavan Tour', destination: 'Mathura – Vrindavan', duration: '2D/1N', price: 'From ₹12,999' },
	{ name: 'Same Day Agra Tour From Delhi', destination: 'Agra – Delhi', duration: 'Same day', price: 'From ₹6,499' },
];
---

<section id="packages" class="scroll-mt-20 border-t border-braj-sand bg-braj-cream py-14 sm:py-20">
	<div class="mx-auto max-w-6xl px-4 sm:px-6">
		<h2 class="text-center font-serif text-2xl font-semibold text-braj-blue sm:text-3xl">
			Mathura Vrindavan Tour Packages
		</h2>
		<p class="mx-auto mt-3 max-w-2xl text-center text-braj-blue/80">
			Budget-friendly packages from Delhi. Compare duration and price below.
		</p>
		<div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
			{packages.map((pkg) => (
				<div class="overflow-hidden rounded-xl border border-braj-sand bg-white shadow-sm transition hover:shadow-md">
					<div class="aspect-[4/3] bg-gradient-to-br from-braj-green/20 to-braj-orange/20 flex items-center justify-center">
						<span class="font-serif text-3xl text-braj-blue/40">{pkg.destination.split('–')[0].trim().charAt(0)}</span>
					</div>
					<div class="p-4">
						<h3 class="font-semibold text-braj-blue">{pkg.name}</h3>
						<p class="mt-1 text-sm text-braj-blue/70">Destination: {pkg.destination}</p>
						<p class="mt-1 text-sm text-braj-blue/70">Duration: {pkg.duration}</p>
						<p class="mt-2 font-semibold text-braj-green">{pkg.price}</p>
						<div class="mt-4 flex gap-2">
							<a href="tel:9228597072" class="rounded-lg bg-braj-blue px-4 py-2 text-sm font-semibold text-white transition hover:bg-braj-blue/90">Enquiry Now</a>
							<a href="https://wa.me/919312301972" target="_blank" rel="noopener noreferrer" class="rounded-lg border border-braj-green px-4 py-2 text-sm font-semibold text-braj-green transition hover:bg-braj-green/10">WhatsApp</a>
						</div>
					</div>
				</div>
			))}
		</div>
	</div>
</section>
