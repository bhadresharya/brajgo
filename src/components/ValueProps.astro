---
// Inspired by Braj Bhoomi: Easy Paced, Experience Culture, Travel in comfort
const props = [
	{
		title: 'Easy Paced Itineraries',
		description: 'We promote a stress-free, restful trip so you can soak in the spiritual atmosphere without rush.',
	},
	{
		title: 'Experience the Culture',
		description: 'We promise to expand your horizons with temple visits, local traditions, and authentic Braj experiences.',
	},
	{
		title: 'Travel in Comfort',
		description: 'Well-maintained vehicles and experienced drivers so you can focus on the journey and the divine.',
	},
];
---

<section class="border-t border-braj-sand bg-white py-12 sm:py-16">
	<div class="mx-auto max-w-6xl px-4 sm:px-6">
		<div class="grid gap-8 md:grid-cols-3">
			{props.map((p) => (
				<div class="rounded-xl border border-braj-sand bg-braj-cream/40 p-6 text-center transition hover:shadow-md">
					<h3 class="font-serif text-lg font-semibold text-braj-blue">{p.title}</h3>
					<p class="mt-3 text-sm text-braj-blue/80">{p.description}</p>
				</div>
			))}
		</div>
	</div>
</section>
