---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageTitle from '../components/PageTitle.astro';

const services = [
	{
		title: 'Tour packages',
		description: 'Same-day and multi-day tours from Delhi or Mathura. Mathura Vrindavan sightseeing, Agra & Taj Mahal, Braj circuit. Custom itineraries and fixed pricing by vehicle.',
		icon: 'map',
		features: ['Same-day tours', 'Multi-day packages', 'Custom itineraries', 'Fixed pricing'],
	},
	{
		title: 'Taxi service',
		description: 'Local and outstation taxi in Mathura, Vrindavan & Agra. Delhi–Mathura, Delhi–Vrindavan, Mathura–Agra, and other routes. Per-day hire or point-to-point.',
		icon: 'car',
		features: ['Local & outstation', 'Airport transfers', 'Per-day hire', 'Point-to-point'],
	},
	{
		title: 'Tempo Traveller & bus',
		description: 'Group travel with Tempo Traveller and bus hire. Comfortable seating, AC, ideal for pilgrim groups and families.',
		icon: 'bus',
		features: ['12-26 seater', 'AC vehicles', 'Group discounts', 'Pilgrim specials'],
	},
];

const vehicles = [
	{ name: 'Sedan', price: '2,500', capacity: '4 passengers' },
	{ name: 'Ertiga', price: '2,700', capacity: '6 passengers' },
	{ name: 'Innova Crysta', price: '4,000', capacity: '7 passengers' },
	{ name: 'Traveller', price: '6,000', capacity: '12-17 passengers' },
];
---

<BaseLayout
	title="Services | Braj Go Tour and Travels"
	description="Tours, taxi, Tempo Traveller and bus hire in Mathura, Vrindavan & Agra. Book from Delhi."
	currentPath="/services"
>
	<main>
		<PageTitle
			title="Our services"
			description="Tours, taxi, and transport for Mathura, Vrindavan & Agra."
		/>

		<!-- Services Section -->
		<section class="bg-mint py-16 sm:py-20 lg:py-24">
			<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
				<div class="grid gap-8 lg:grid-cols-3">
					{services.map((service) => (
						<div class="group rounded-2xl bg-white p-8 shadow-sm transition-shadow hover:shadow-md">
							<div class="flex h-14 w-14 items-center justify-center rounded-xl bg-accent-teal/10 transition-colors group-hover:bg-accent-teal/20">
								{service.icon === 'map' && (
									<svg class="h-7 w-7 text-accent-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
									</svg>
								)}
								{service.icon === 'car' && (
									<svg class="h-7 w-7 text-accent-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
									</svg>
								)}
								{service.icon === 'bus' && (
									<svg class="h-7 w-7 text-accent-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
									</svg>
								)}
							</div>
							<h3 class="mt-6 text-xl font-bold text-dark">{service.title}</h3>
							<p class="mt-3 text-sage">{service.description}</p>
							<ul class="mt-6 space-y-2">
								{service.features.map((feature) => (
									<li class="flex items-center gap-2 text-sm text-sage">
										<svg class="h-4 w-4 text-accent-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
										</svg>
										{feature}
									</li>
								))}
							</ul>
							<a 
								href="tel:9228597072" 
								class="mt-8 inline-flex items-center gap-1 font-semibold text-accent-teal transition hover:gap-2"
							>
								<span>Enquire now</span>
								<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
								</svg>
							</a>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Vehicle Pricing Section -->
		<section class="bg-white py-16 sm:py-20 lg:py-24">
			<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
				<div class="text-center">
					<h2 class="text-2xl font-bold text-dark sm:text-3xl">Vehicle options & pricing</h2>
					<p class="mx-auto mt-4 max-w-2xl text-sage">Transparent daily rates. Choose the vehicle that fits your group size and budget.</p>
				</div>

				<div class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
					{vehicles.map((vehicle) => (
						<div class="rounded-2xl border-2 border-mint bg-mint/30 p-6 text-center transition-colors hover:border-accent-teal/30">
							<h3 class="text-lg font-bold text-dark">{vehicle.name}</h3>
							<p class="mt-1 text-sm text-sage">{vehicle.capacity}</p>
							<div class="mt-4">
								<span class="text-3xl font-bold text-accent-teal">₹{vehicle.price}</span>
								<span class="text-sage">/day</span>
							</div>
						</div>
					))}
				</div>

				<div class="mt-12 text-center">
					<a 
						href="/contact" 
						class="inline-flex items-center gap-2 rounded-full bg-accent-teal px-8 py-4 text-base font-semibold text-white shadow-lg shadow-accent-teal/25 transition-all hover:bg-accent-teal/90 hover:shadow-xl"
					>
						<span>Book your ride</span>
						<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
						</svg>
					</a>
				</div>
			</div>
		</section>
	</main>
</BaseLayout>
