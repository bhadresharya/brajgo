---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageTitle from '../components/PageTitle.astro';
---

<BaseLayout
	title="Contact | Braj Go Tour and Travels"
	description="Contact Braj Go – phone, WhatsApp, address. Book tours and taxi in Mathura, Vrindavan, Agra."
	currentPath="/contact"
>
	<main>
		<PageTitle
			title="Contact us"
			description="Call or WhatsApp to book your tour or taxi. We’re here to help."
		/>
		<section class="mx-auto max-w-6xl px-4 py-16 sm:px-8">
			<div class="grid gap-12 lg:grid-cols-2">
				<div>
					<h2 class="text-xl font-semibold text-dark">Get in touch</h2>
					<dl class="mt-6 space-y-5 text-sage">
						<div>
							<dt class="text-sm font-medium text-dark">Address</dt>
							<dd class="mt-1">Gopal Puram, Mathura, Uttar Pradesh</dd>
						</div>
						<div>
							<dt class="text-sm font-medium text-dark">Mobile</dt>
							<dd class="mt-1">
								<a href="tel:9228597072" class="text-accent-teal hover:underline">9228597072</a>,
								<a href="tel:9413211264" class="text-accent-teal hover:underline">9413211264</a>
							</dd>
						</div>
						<div>
							<dt class="text-sm font-medium text-dark">WhatsApp</dt>
							<dd class="mt-1">
								<a href="https://wa.me/919312301972" target="_blank" rel="noopener noreferrer" class="text-accent-teal hover:underline">9312301972</a>,
								<a href="https://wa.me/919433211264" target="_blank" rel="noopener noreferrer" class="text-accent-teal hover:underline">9433211264</a>
							</dd>
						</div>
					</dl>
					<div class="mt-10 flex flex-wrap gap-4">
						<a href="tel:9228597072" class="rounded-full bg-accent-teal px-6 py-3 font-semibold text-white transition hover:opacity-90">Call now</a>
						<a href="https://wa.me/919312301972" target="_blank" rel="noopener noreferrer" class="rounded-full border-2 border-accent-teal px-6 py-3 font-semibold text-accent-teal transition hover:bg-accent-teal/10">WhatsApp</a>
					</div>
				</div>
				<div class="rounded-2xl border border-teal/30 bg-white/60 p-8">
					<h2 class="text-xl font-semibold text-dark">Braj Go Tour and Travels</h2>
					<p class="mt-4 text-sage">
						We’re based in Mathura and serve Mathura, Vrindavan, Agra, and Delhi pickups. For tour packages, taxi booking, or any enquiry, call or WhatsApp us. We’ll get back to you quickly.
					</p>
				</div>
			</div>
		</section>
	</main>
</BaseLayout>
