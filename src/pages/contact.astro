---
import BaseLayout from '../components/BaseLayout.astro';
import PageTitle from '../components/PageTitle.astro';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const siteUrl = import.meta.env.SITE || 'https://bhadresharya.github.io';
const mapsUrl = 'https://www.google.com/maps/search/?api=1&query=Gokul+Bairaj+Road+beside+Laxmi+Garden+Township+Mathura+Uttar+Pradesh+India';
const mapsEmbedUrl = 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3532.46!2d77.6969!3d27.4924!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39736ce47bfac039%3A0x9e786f7d6928e7b!2sMathura%2C%20Uttar%20Pradesh!5e0!3m2!1sen!2sin';
---

<BaseLayout 
	title="Contact Us | Braj Go Tours and Travels"
	description="Contact Braj Go Tours and Travels for taxi booking and tour packages in Mathura, Vrindavan & Agra. Call us at +91 89238 97072"
	currentPath="/contact"
>
	<PageTitle 
		title="Contact Us" 
		subtitle="Get in touch with us for bookings and inquiries"
	/>

	<!-- Contact Info & Form -->
	<section class="py-12 sm:py-16" style="background-color: white;">
		<div class="mx-auto max-w-6xl px-4">
			<div class="grid gap-10 lg:grid-cols-2">
				<!-- Contact Information -->
				<div>
					<h2 class="text-2xl font-bold sm:text-3xl" style="color: var(--primary);">
						Get In Touch
					</h2>
					<p class="mt-4 leading-relaxed" style="color: var(--text-gray);">
						Ready to explore Mathura, Vrindavan, or Agra? We're here to help you plan your perfect trip. Reach out to us through any of the following ways.
					</p>

					<div class="mt-8 space-y-6">
						<!-- Phone -->
						<div class="flex items-start gap-4">
							<div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-full" style="background-color: var(--primary-light);">
								<svg class="h-6 w-6" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
								</svg>
							</div>
							<div>
								<h3 class="font-bold" style="color: var(--text-dark);">Phone</h3>
								<p class="mt-1" style="color: var(--text-gray);">
									<a href="tel:+918923897072" class="hover:underline">+91 89238 97072</a>
								</p>
							</div>
						</div>

						<!-- WhatsApp -->
						<div class="flex items-start gap-4">
							<div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-full" style="background-color: var(--primary-light);">
								<svg class="h-6 w-6" style="color: var(--primary);" fill="currentColor" viewBox="0 0 24 24">
									<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
								</svg>
							</div>
							<div>
								<h3 class="font-bold" style="color: var(--text-dark);">WhatsApp</h3>
								<p class="mt-1" style="color: var(--text-gray);">
									<a href="https://wa.me/918439191284" target="_blank" rel="noopener noreferrer" class="hover:underline">+91 84391 91284</a>
								</p>
							</div>
						</div>

						<!-- Email -->
						<div class="flex items-start gap-4">
							<div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-full" style="background-color: var(--primary-light);">
								<svg class="h-6 w-6" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
								</svg>
							</div>
							<div>
								<h3 class="font-bold" style="color: var(--text-dark);">Email</h3>
								<p class="mt-1" style="color: var(--text-gray);">
									<a href="mailto:dheerendrasingh7072@gmail.com" class="hover:underline">dheerendrasingh7072@gmail.com</a>
								</p>
							</div>
						</div>

						<!-- Address -->
						<div class="flex items-start gap-4">
							<div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-full" style="background-color: var(--primary-light);">
								<svg class="h-6 w-6" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
								</svg>
							</div>
							<div>
								<h3 class="font-bold" style="color: var(--text-dark);">Address</h3>
								<p class="mt-1" style="color: var(--text-gray);">
									<a href={mapsUrl} target="_blank" rel="noopener noreferrer" class="hover:underline">Gokul, Bairaj Road, beside Laxmi Garden Township, Mathura<br>Uttar Pradesh, India</a>
								</p>
							</div>
						</div>

						<!-- Working Hours -->
						<div class="flex items-start gap-4">
							<div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-full" style="background-color: var(--primary-light);">
								<svg class="h-6 w-6" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
								</svg>
							</div>
							<div>
								<h3 class="font-bold" style="color: var(--text-dark);">Working Hours</h3>
								<p class="mt-1" style="color: var(--text-gray);">
									24/7 Available<br>
									Open all days
								</p>
							</div>
						</div>
					</div>

					<!-- Quick Actions -->
					<div class="mt-10 flex flex-col gap-4 sm:flex-row">
						<a 
							href="tel:+918923897072" 
							class="inline-flex items-center justify-center gap-2 rounded-full px-6 py-3 font-bold text-white transition hover:opacity-90"
							style="background-color: var(--primary);"
						>
							<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
							</svg>
							Call Now
						</a>
						<a 
							href="https://wa.me/918439191284" 
							target="_blank"
							rel="noopener noreferrer"
							class="inline-flex items-center justify-center gap-2 rounded-full px-6 py-3 font-bold text-white transition hover:opacity-90"
							style="background-color: #25D366;"
						>
							<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
								<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
							</svg>
							WhatsApp
						</a>
					</div>
				</div>

				<!-- Contact Form -->
				<div class="rounded-2xl bg-gray-50 p-6 sm:p-8">
					<h3 class="text-xl font-bold" style="color: var(--text-dark);">Send us a Message</h3>
					<p class="mt-2 text-sm" style="color: var(--text-gray);">
						Fill out the form below and we'll get back to you as soon as possible.
					</p>

					<form 
						action="https://api.web3forms.com/submit" 
						method="POST"
						class="mt-6 space-y-4"
					>
						<!-- Web3Forms Access Key -->
						<input type="hidden" name="access_key" value="ac1c5656-f73d-4e06-90aa-a3a74c15e749" />
						<!-- Email Subject -->
						<input type="hidden" name="subject" value="New Inquiry from Braj Go Website" />
						<!-- Redirect after submission -->
						<input type="hidden" name="redirect" value={`${siteUrl}${base}/thank-you`} />
						<!-- Honeypot Spam Protection -->
						<input type="checkbox" name="botcheck" class="hidden" style="display: none;" />

						<div>
							<label for="name" class="block text-sm font-medium" style="color: var(--text-dark);">Full Name</label>
							<input 
								type="text" 
								id="name" 
								name="name" 
								required
								class="mt-1 w-full rounded-lg border border-gray-300 px-4 py-3 text-sm focus:border-transparent focus:outline-none focus:ring-2"
								style="--tw-ring-color: var(--primary);"
								placeholder="Your name"
							/>
						</div>

						<div>
							<label for="phone" class="block text-sm font-medium" style="color: var(--text-dark);">Phone Number</label>
							<input 
								type="tel" 
								id="phone" 
								name="phone" 
								required
								class="mt-1 w-full rounded-lg border border-gray-300 px-4 py-3 text-sm focus:border-transparent focus:outline-none focus:ring-2"
								style="--tw-ring-color: var(--primary);"
								placeholder="Your phone number"
							/>
						</div>

						<div>
							<label for="service" class="block text-sm font-medium" style="color: var(--text-dark);">Service Required</label>
							<select 
								id="service" 
								name="service" 
								class="mt-1 w-full rounded-lg border border-gray-300 px-4 py-3 text-sm focus:border-transparent focus:outline-none focus:ring-2"
								style="--tw-ring-color: var(--primary);"
							>
								<option value="">Select a service</option>
								<option value="Airport Taxi Service">Airport Taxi Service</option>
								<option value="Local Taxi Service">Local Taxi Service</option>
								<option value="Mathura Vrindavan Tour">Mathura Vrindavan Tour</option>
								<option value="Agra Tour">Agra Tour</option>
								<option value="Tour from Delhi">Tour from Delhi</option>
								<option value="Outstation Trip">Outstation Trip</option>
								<option value="Other">Other</option>
							</select>
						</div>

						<div>
							<label for="message" class="block text-sm font-medium" style="color: var(--text-dark);">Message</label>
							<textarea 
								id="message" 
								name="message" 
								rows="4"
								class="mt-1 w-full rounded-lg border border-gray-300 px-4 py-3 text-sm focus:border-transparent focus:outline-none focus:ring-2"
								style="--tw-ring-color: var(--primary);"
								placeholder="Tell us about your travel plans..."
							></textarea>
						</div>

						<button 
							type="submit" 
							class="w-full rounded-lg py-3 font-bold text-white transition hover:opacity-90"
							style="background-color: var(--primary);"
						>
							Send Message
						</button>
					</form>
				</div>
			</div>
		</div>
	</section>

	<!-- Map Section -->
	<section class="py-12 sm:py-16" style="background-color: var(--bg-light);">
		<div class="mx-auto max-w-6xl px-4">
			<h2 class="text-center text-2xl font-bold sm:text-3xl" style="color: var(--primary);">
				Our Location
			</h2>
			<p class="mx-auto mt-4 max-w-2xl text-center" style="color: var(--text-gray);">
				Visit us at our office in Mathura or contact us for pick-up services
			</p>
			<div class="mt-8 overflow-hidden rounded-2xl shadow-lg">
				<iframe 
					src={mapsEmbedUrl}
					width="100%" 
					height="400" 
					style="border:0;" 
					allowfullscreen="" 
					loading="lazy" 
					referrerpolicy="no-referrer-when-downgrade"
					title="Braj Go Tours and Travels - Gokul, Bairaj Road, Mathura"
				></iframe>
			</div>
			<p class="mt-4 text-center text-sm" style="color: var(--text-gray);">
				<a href={mapsUrl} target="_blank" rel="noopener noreferrer" class="font-medium hover:underline" style="color: var(--primary);">Open in Google Maps â†’</a>
			</p>
		</div>
	</section>
</BaseLayout>
