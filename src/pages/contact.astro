---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageTitle from '../components/PageTitle.astro';
---

<BaseLayout
	title="Contact | Braj Go Tour and Travels"
	description="Contact Braj Go â€“ phone, WhatsApp, address. Book tours and taxi in Mathura, Vrindavan, Agra."
	currentPath="/contact"
>
	<main>
		<PageTitle
			title="Contact us"
			description="Call or WhatsApp to book your tour or taxi. We're here to help."
		/>

		<section class="bg-mint py-16 sm:py-20 lg:py-24">
			<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
				<div class="grid gap-12 lg:grid-cols-2">
					<!-- Contact Info -->
					<div>
						<h2 class="text-2xl font-bold text-dark sm:text-3xl">Get in touch</h2>
						<p class="mt-4 text-sage">
							We're based in Mathura and serve Mathura, Vrindavan, Agra, and Delhi pickups. For tour packages, taxi booking, or any enquiry, reach out to us.
						</p>

						<div class="mt-10 space-y-6">
							<!-- Address -->
							<div class="flex gap-4">
								<div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-xl bg-accent-teal/10">
									<svg class="h-6 w-6 text-accent-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
									</svg>
								</div>
								<div>
									<h3 class="font-semibold text-dark">Address</h3>
									<p class="mt-1 text-sage">Gopal Puram, Mathura, Uttar Pradesh</p>
								</div>
							</div>

							<!-- Phone -->
							<div class="flex gap-4">
								<div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-xl bg-accent-teal/10">
									<svg class="h-6 w-6 text-accent-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
									</svg>
								</div>
								<div>
									<h3 class="font-semibold text-dark">Phone</h3>
									<div class="mt-1 flex flex-wrap gap-x-4 gap-y-1">
										<a href="tel:9228597072" class="text-accent-teal hover:underline">922-859-7072</a>
										<a href="tel:9413211264" class="text-accent-teal hover:underline">941-321-1264</a>
									</div>
								</div>
							</div>

							<!-- WhatsApp -->
							<div class="flex gap-4">
								<div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-xl bg-accent-teal/10">
									<svg class="h-6 w-6 text-accent-teal" fill="currentColor" viewBox="0 0 24 24">
										<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
									</svg>
								</div>
								<div>
									<h3 class="font-semibold text-dark">WhatsApp</h3>
									<div class="mt-1 flex flex-wrap gap-x-4 gap-y-1">
										<a href="https://wa.me/919312301972" target="_blank" rel="noopener noreferrer" class="text-accent-teal hover:underline">931-230-1972</a>
										<a href="https://wa.me/919433211264" target="_blank" rel="noopener noreferrer" class="text-accent-teal hover:underline">943-321-1264</a>
									</div>
								</div>
							</div>
						</div>

						<!-- CTA Buttons -->
						<div class="mt-10 flex flex-wrap gap-4">
							<a 
								href="tel:9228597072" 
								class="inline-flex items-center gap-2 rounded-full bg-accent-teal px-6 py-3 font-semibold text-white shadow-lg shadow-accent-teal/25 transition-all hover:bg-accent-teal/90 hover:shadow-xl"
							>
								<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
								</svg>
								<span>Call now</span>
							</a>
							<a 
								href="https://wa.me/919312301972" 
								target="_blank" 
								rel="noopener noreferrer" 
								class="inline-flex items-center gap-2 rounded-full border-2 border-accent-teal bg-white px-6 py-3 font-semibold text-accent-teal transition-all hover:bg-accent-teal/5"
							>
								<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
									<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
								</svg>
								<span>WhatsApp</span>
							</a>
						</div>
					</div>

					<!-- Info Card -->
					<div class="flex flex-col gap-6">
						<div class="rounded-2xl bg-white p-8 shadow-sm">
							<h3 class="text-xl font-bold text-dark">Quick booking tips</h3>
							<ul class="mt-6 space-y-4">
								<li class="flex gap-3">
									<span class="flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-accent-teal/10 text-sm font-semibold text-accent-teal">1</span>
									<span class="text-sage">Call or WhatsApp with your travel dates and pickup location</span>
								</li>
								<li class="flex gap-3">
									<span class="flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-accent-teal/10 text-sm font-semibold text-accent-teal">2</span>
									<span class="text-sage">Choose your vehicle type based on group size</span>
								</li>
								<li class="flex gap-3">
									<span class="flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-accent-teal/10 text-sm font-semibold text-accent-teal">3</span>
									<span class="text-sage">Confirm booking with a small advance payment</span>
								</li>
								<li class="flex gap-3">
									<span class="flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full bg-accent-teal/10 text-sm font-semibold text-accent-teal">4</span>
									<span class="text-sage">Driver arrives at your location on time</span>
								</li>
							</ul>
						</div>

						<div class="rounded-2xl bg-dark p-8">
							<h3 class="text-xl font-bold text-white">Service areas</h3>
							<div class="mt-6 flex flex-wrap gap-2">
								{['Mathura', 'Vrindavan', 'Agra', 'Delhi', 'Gurgaon', 'Noida', 'Jaipur', 'Bharatpur'].map((place) => (
									<span class="rounded-full bg-white/10 px-4 py-1.5 text-sm text-white/90">{place}</span>
								))}
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</BaseLayout>
