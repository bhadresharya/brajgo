	{
		title: 'Mathura Vrindavan 2 Day Sightseeing Tour',
		image: 'https://picsum.photos/seed/mathura-2day/400/250',
		prices: { sedan: '4500', ertiga: '5000', innova: '6500', traveller: '12000' },
	},
	{
		title: 'Mathura Vrindavan 3 Day Sightseeing Tour',
		image: 'https://picsum.photos/seed/mathura-3day/400/250',
		prices: { sedan: '7000', ertiga: '8000', innova: '9500', traveller: '18000' },
