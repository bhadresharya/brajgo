---
import BaseLayout from '../../components/BaseLayout.astro';
import PageTitle from '../../components/PageTitle.astro';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const enquirySource = 'Airport Taxi Service';
---

<BaseLayout
	title="Airport Taxi Service | Delhi & Agra | Braj Go Tours"
	description="Book airport taxi from Delhi IGI and Agra to Mathura, Vrindavan. Reliable pickup and drop, flight tracking, 24/7 service. Sedan, Ertiga, Innova & Tempo Traveller."
	currentPath="/taxi/airport-taxi"
>
	<PageTitle
		title="Airport Taxi Service"
		subtitle="Comfortable pickup and drop from Delhi & Agra airports to Mathura, Vrindavan and beyond"
	/>

	<!-- Intro -->
	<section class="py-12 sm:py-16" style="background-color: white;">
		<div class="mx-auto max-w-6xl px-4">
			<div class="grid gap-10 lg:grid-cols-2">
				<div>
					<h2 class="text-2xl font-bold sm:text-3xl" style="color: var(--primary);">
						Airport Transfer to Mathura & Vrindavan
					</h2>
					<p class="mt-4 leading-relaxed" style="color: var(--text-gray);">
						Land at Delhi IGI or Agra and head straight to the holy towns of Mathura and Vrindavan. Braj Go Tours and Travels offers reliable airport taxi service with meet-and-greet, flight tracking, and comfortable AC vehicles. Whether you are arriving for a pilgrimage or a family trip, we ensure a hassle-free transfer.
					</p>
					<ul class="mt-6 space-y-2" style="color: var(--text-gray);">
						<li class="flex items-center gap-2">
							<svg class="h-5 w-5 shrink-0" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
							Delhi IGI Airport pickup and drop
						</li>
						<li class="flex items-center gap-2">
							<svg class="h-5 w-5 shrink-0" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
							Agra Airport (Kheria) transfers
						</li>
						<li class="flex items-center gap-2">
							<svg class="h-5 w-5 shrink-0" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
							Flight delay tracking – no extra charge
						</li>
						<li class="flex items-center gap-2">
							<svg class="h-5 w-5 shrink-0" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
							24/7 service for early and late flights
						</li>
					</ul>
					<div class="mt-8 flex flex-col gap-3 sm:flex-row">
						<button
							type="button"
							data-enquiry-source={enquirySource}
							class="inline-flex items-center justify-center gap-2 rounded-full px-6 py-3 font-bold text-white transition hover:opacity-90"
							style="background-color: var(--primary);"
						>
							Send Enquiry
						</button>
						<a href="tel:+918923897072" class="inline-flex items-center justify-center gap-2 rounded-full border-2 px-6 py-3 font-bold transition hover:opacity-90" style="border-color: var(--primary); color: var(--primary);">
							Call: +91 89238 97072
						</a>
						<a href="https://wa.me/918439191284" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center gap-2 rounded-full px-6 py-3 font-bold text-white transition hover:opacity-90" style="background-color: #25D366;">
							WhatsApp
						</a>
					</div>
				</div>
				<div class="rounded-2xl p-6" style="background-color: var(--bg-light);">
					<h3 class="text-lg font-bold" style="color: var(--text-dark);">Airports we serve</h3>
					<div class="mt-4 space-y-4">
						<div>
							<p class="font-semibold" style="color: var(--primary);">Indira Gandhi International (IGI), Delhi</p>
							<p class="mt-1 text-sm" style="color: var(--text-gray);">Pickup/drop to Mathura, Vrindavan, Agra, Noida, and nearby cities. Approx 3–4 hours to Mathura.</p>
						</div>
						<div>
							<p class="font-semibold" style="color: var(--primary);">Agra Airport (Kheria)</p>
							<p class="mt-1 text-sm" style="color: var(--text-gray);">Short transfer to Mathura, Vrindavan, or Agra city. Ideal for domestic arrivals and Taj visits.</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Vehicles -->
	<section class="py-12 sm:py-16" style="background-color: var(--bg-light);">
		<div class="mx-auto max-w-6xl px-4">
			<h2 class="text-center text-2xl font-bold sm:text-3xl" style="color: var(--primary);">
				Vehicles for Airport Transfer
			</h2>
			<p class="mx-auto mt-4 max-w-2xl text-center" style="color: var(--text-gray);">
				Sedan, Ertiga, Innova Crysta, and Tempo Traveller available. Send an enquiry for rates and availability.
			</p>
			<div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
				<div class="rounded-xl bg-white p-6 text-center shadow" style="border: 2px solid var(--primary);">
					<p class="font-bold" style="color: var(--text-dark);">Sedan</p>
					<p class="text-sm" style="color: var(--text-gray);">4 Seater • AC</p>
				</div>
				<div class="rounded-xl bg-white p-6 text-center shadow" style="border: 2px solid var(--primary);">
					<p class="font-bold" style="color: var(--text-dark);">Ertiga</p>
					<p class="text-sm" style="color: var(--text-gray);">6 Seater • AC</p>
				</div>
				<div class="rounded-xl bg-white p-6 text-center shadow" style="border: 2px solid var(--primary);">
					<p class="font-bold" style="color: var(--text-dark);">Innova Crysta</p>
					<p class="text-sm" style="color: var(--text-gray);">7 Seater • AC</p>
				</div>
				<div class="rounded-xl bg-white p-6 text-center shadow" style="border: 2px solid var(--primary);">
					<p class="font-bold" style="color: var(--text-dark);">Tempo Traveller</p>
					<p class="text-sm" style="color: var(--text-gray);">12–17 Seater • AC</p>
				</div>
			</div>
			<div class="mt-8 text-center">
				<button type="button" data-enquiry-source={enquirySource} class="rounded-full px-8 py-3 font-bold text-white transition hover:opacity-90" style="background-color: var(--primary);">
					Send Enquiry for rates
				</button>
			</div>
		</div>
	</section>

	<!-- Why Choose Us -->
	<section class="py-12 sm:py-16" style="background-color: white;">
		<div class="mx-auto max-w-6xl px-4">
			<h2 class="text-center text-2xl font-bold sm:text-3xl" style="color: var(--primary);">
				Why Book Airport Taxi With Us?
			</h2>
			<div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
				<div class="text-center">
					<div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full" style="background-color: var(--primary-light);">
						<svg class="h-7 w-7" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
					</div>
					<h3 class="mt-4 font-bold" style="color: var(--text-dark);">Flight tracking</h3>
					<p class="mt-2 text-sm" style="color: var(--text-gray);">We track your flight and adjust pickup time – no extra charge for delays.</p>
				</div>
				<div class="text-center">
					<div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full" style="background-color: var(--primary-light);">
						<svg class="h-7 w-7" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
					</div>
					<h3 class="mt-4 font-bold" style="color: var(--text-dark);">Safe & reliable</h3>
					<p class="mt-2 text-sm" style="color: var(--text-gray);">Experienced drivers and well-maintained AC vehicles.</p>
				</div>
				<div class="text-center">
					<div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full" style="background-color: var(--primary-light);">
						<svg class="h-7 w-7" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /></svg>
					</div>
					<h3 class="mt-4 font-bold" style="color: var(--text-dark);">Door-to-door</h3>
					<p class="mt-2 text-sm" style="color: var(--text-gray);">Pickup from airport terminal and drop at your hotel or destination.</p>
				</div>
				<div class="text-center">
					<div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full" style="background-color: var(--primary-light);">
						<svg class="h-7 w-7" style="color: var(--primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
					</div>
					<h3 class="mt-4 font-bold" style="color: var(--text-dark);">Best rates</h3>
					<p class="mt-2 text-sm" style="color: var(--text-gray);">Transparent pricing with no hidden charges.</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Popular routes -->
	<section class="py-12 sm:py-16" style="background-color: var(--bg-light);">
		<div class="mx-auto max-w-6xl px-4">
			<h2 class="text-center text-2xl font-bold sm:text-3xl" style="color: var(--primary);">
				Popular Airport Routes
			</h2>
			<p class="mx-auto mt-4 max-w-2xl text-center" style="color: var(--text-gray);">
				Quick links to book taxi on these routes
			</p>
			<div class="mt-8 flex flex-wrap justify-center gap-3">
				<a href={`${base}/taxi/delhi-to-mathura`} class="rounded-full px-5 py-2.5 text-sm font-medium transition hover:opacity-90" style="background-color: var(--primary); color: white;">Delhi to Mathura</a>
				<a href={`${base}/taxi/delhi-to-vrindavan`} class="rounded-full px-5 py-2.5 text-sm font-medium transition hover:opacity-90" style="background-color: var(--primary); color: white;">Delhi to Vrindavan</a>
				<a href={`${base}/taxi/mathura-to-delhi`} class="rounded-full px-5 py-2.5 text-sm font-medium transition hover:opacity-90" style="background-color: var(--primary); color: white;">Mathura to Delhi</a>
				<a href={`${base}/taxi/vrindavan-to-delhi`} class="rounded-full px-5 py-2.5 text-sm font-medium transition hover:opacity-90" style="background-color: var(--primary); color: white;">Vrindavan to Delhi</a>
				<a href={`${base}/taxi/mathura-to-agra`} class="rounded-full px-5 py-2.5 text-sm font-medium transition hover:opacity-90" style="background-color: var(--primary); color: white;">Mathura to Agra</a>
				<a href={`${base}/taxi/agra-to-mathura`} class="rounded-full px-5 py-2.5 text-sm font-medium transition hover:opacity-90" style="background-color: var(--primary); color: white;">Agra to Mathura</a>
			</div>
		</div>
	</section>

	<!-- CTA -->
	<section class="py-12 sm:py-16" style="background-color: var(--primary);">
		<div class="mx-auto max-w-4xl px-4 text-center text-white">
			<h2 class="text-2xl font-bold sm:text-3xl">Book Your Airport Taxi Now</h2>
			<p class="mx-auto mt-4 max-w-xl text-white/90">Send an enquiry with your flight details and we’ll confirm your transfer. Available 24/7.</p>
			<div class="mt-8 flex flex-col items-center justify-center gap-4 sm:flex-row">
				<button type="button" data-enquiry-source={enquirySource} class="inline-flex items-center gap-2 rounded-full px-8 py-4 text-lg font-bold text-white transition hover:opacity-90" style="background-color: var(--accent);">
					Send Enquiry
				</button>
				<a href="tel:+918923897072" class="inline-flex items-center gap-2 rounded-full border-2 border-white/30 bg-white/10 px-8 py-4 text-lg font-bold backdrop-blur-sm transition hover:bg-white/20">Call: +91 89238 97072</a>
				<a href="https://wa.me/918439191284" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 rounded-full border-2 border-white/30 bg-white/10 px-8 py-4 text-lg font-bold backdrop-blur-sm transition hover:bg-white/20">WhatsApp Us</a>
			</div>
		</div>
	</section>
</BaseLayout>
