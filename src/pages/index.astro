			if (!h1 || !el) return;
			let headings = [];
			try {
				headings = JSON.parse(h1.getAttribute('data-typewriter-headings') || '[]');
			} catch (_) {}
			if (headings.length === 0) return;
			const typeSpeed = 80;
			const deleteSpeed = 45;
			const pauseAfterType = 2200;
			const pauseAfterDelete = 500;
			let headingIndex = 0;
			function type() {
				const text = headings[headingIndex];
				let i = 0;
				function addChar() {
					if (i < text.length) {
						el.textContent += text[i];
						i++;
						setTimeout(addChar, typeSpeed);
					} else {
						setTimeout(erase, pauseAfterType);
					}
				}
				addChar();
			}
			function erase() {
				const cur = el.textContent;
				if (cur.length === 0) {
					headingIndex = (headingIndex + 1) % headings.length;
					setTimeout(type, pauseAfterDelete);
					return;
				}
				el.textContent = cur.slice(0, -1);
				setTimeout(erase, deleteSpeed);
			}
			type();
		})();
	</script>

